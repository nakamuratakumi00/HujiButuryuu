<html lang="ja">

@{
    ViewBag.Title = "TASSデータ連携";
    ViewBag.ScreenId = "";
    ViewBag.PageMainTitle = "TASSデータ連携取込完了";

}
@section Scripts {
    <script>
        $(function () {

            var dt1 = new Macss.DataTables.MacssDataTable("#CaptureList");
            dt1.setScrollY("600px");
            dt1.configure();

            var dt2 = new Macss.DataTables.MacssDataTable("#ErrorList");
            dt2.setScrollY("600px");
            dt2.configure();

            $('[data-toggle="popover"]').popover();

        });
    </script>
}

<div class="alert @ViewBag.AlertType">
    <span>@ViewBag.ResultMessage</span>
</div>

<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
    </div>
    <div class="col-4 text-right">
        <a class="btn btn-primary macss-btn-sub" href="@Url.Action("List", "D006")" role="button">エラー一覧</a>
    </div>
</div>

<div id="ConditionMain" class="container-fluid mt-3 mb-3 pr-1 collapse show" aria-labelledby="headingOne" data-parent="#ConditionAccordion">
    <div class="row mr-0 mb-1">
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="Condition1">倉庫コード</span>
                </div>
                <input type="text" class="form-control" aria-label="Condition1" aria-describedby="Condition1">
            </div>
        </div>
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="Condition1">得意先コード</span>
                </div>
                <input type="text" class="form-control" aria-label="Condition1" aria-describedby="Condition1">
            </div>
        </div>
    </div>
    <div class="row mr-0 mb-1">
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">取込件数</span>
                </div>
                <span class="form-control">1件</span>
            </div>
        </div>
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">エラー件数</span>
                </div>
                <span class="form-control">1件</span>
            </div>
        </div>
        <div class="col-4 text-right">
            <div class="dropdown">
                <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bars"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#CsvDownloadDialog">CSVダウンロード</a>
                </div>
            </div>
        </div>
    </div>
</div>

<table id="CaptureList" class="table table-striped table-hover macss-data-table">
    <thead class="macss-data-table-header">
        <tr>
            <th>
                エラー　　
            </th>
            <th>
                出荷No　　　
            </th>
            <th>
                出荷日　　　　
            </th>
            <th>
                得意先コード　　　　
            </th>
            <th>
                得意先名　　　　　　　　　　　　　　　　
            </th>
            <th>
                品名コード　　　　　
            </th>
            <th>
                品名　　　　　　　　　　　　　　　　　　　　　　
            </th>
            <th>
                出荷数　　　　　　　　
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <a tabindex="0" class="btn btn-sm btn-danger" role="button" data-toggle="popover"
                   data-trigger="focus" title="エラー詳細"
                   data-content="引当分在庫なし">詳細</a>
            </td>
            <td>
                123456789
            </td>
