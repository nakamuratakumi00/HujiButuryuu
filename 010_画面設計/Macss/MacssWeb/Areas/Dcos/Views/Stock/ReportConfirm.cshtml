<html lang="ja">
@{
    ViewBag.Title = "在庫データ";
    ViewBag.PageMainTitle = "在庫報告書作成確認";

}
@section Scripts {
    <script>$(function () {

            var dt1 = new Macss.DataTables.MacssDataTable("#ExecConfirmList1");
            dt1.setScrollY("600px");
            dt1.configure();

            var dt2 = new Macss.DataTables.MacssDataTable("#ExecConfirmList2");
            dt2.setScrollY("600px");
            dt2.configure();
        });</script>
}
<div class="alert alert-info">
    <span>在庫報告書を作成します。よろしいですか？</span>
</div>
<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
        <a role="button" class="btn btn-secondary" href="@Url.Action("Report")">戻る</a>
    </div>
    <div class="col-4 text-right">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ConfirmDialog">作成</button>
    </div>
</div>
@using (Html.BeginForm("Search", "Sample", null, FormMethod.Post))
{

    <div class="accordion" id="ConditionAccordion">
        <div id="ConditionMain" class="container-fluid mt-3 mb-3 pr-1 collapse show" aria-labelledby="headingOne" data-parent="#ConditionAccordion">
            <div class="row mr-0 mb-1">
                <div class="col-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Condition1">区分</span>
                        </div>
                        <span class="form-control">更新</span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Condition1">得意先</span>
                        </div>
                        <span class="form-control">全て</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="mb-4">
</div>
<div class="modal" id="ConfirmDialog" tabindex="-1" role="dialog" aria-labelledby="ConfirmDialogTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ConfirmDialogTitle">@MacssWeb.Resources.Title.ExecConfirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                在庫報告書を作成します。よろしいですか？
            </div>
            <div class="modal-footer">
