    </div>
    <div>
            <p>【洗替対象】</p>
    </div>
    <div class="row mr-0 mb-1">
        <div class="col-3">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="Condition3">件数</span>
            </div>
            <div class="form-control" aria-label="Condition1" aria-describedby="Condition1">
                123456
            </div>
        </div>
        </div>
        <div class="col-3">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="Condition3">非課税金額合計</span>
            </div>
            <div class="form-control" aria-label="Condition1" aria-describedby="Condition1">
                123,456
            </div>
        </div>
        </div>
        <div class="col-3">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="Condition3">課税金額合計</span>
            </div>
            <div class="form-control" aria-label="Condition1" aria-describedby="Condition1">
                123,456
            </div>
        </div>
        </div>
        
    </div>
</div>

