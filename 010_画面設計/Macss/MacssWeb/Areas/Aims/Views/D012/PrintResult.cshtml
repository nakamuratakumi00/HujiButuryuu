@* 請求関連書類印刷完了 *@

@{
    ViewBag.ResultMessage = "印刷が完了しました。";
}

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover();

            var dt = new Macss.DataTables.MacssSimpleTable("#PrintCompleteList");
            dt.configure();

        });
    </script>
}

@* メッセージ *@
<div class="alert @ViewBag.AlertType">
    <span>@ViewBag.ResultMessage</span>
</div>

@* サブメニューへ戻る *@
<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
    </div>
    <div class="col-4 text-right">
        <a role="button" class="btn btn-secondary" href="@Url.Action("Index", "Home")">@MacssWeb.Resources.ControlText.BackToSubMenu</a>
    </div>
</div>

@* 印刷共通部分 *@
@using (Html.BeginForm("Print", "Aims", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Partial("_Print")
}

@*  指定内容 *@
<div class="container-fluid mt-4">
    <div class="row mr-0 mb-1">
        @* 発行対象 *@
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">発行対象　　</span>
                </div>
                <div class="form-control">全請求先</div>
            </div>
        </div>
        @* 請求先コード *@
        <div class="col-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">請求先コード</span>
                </div>
                <input type="text" class="form-control" value="90101" />
            </div>
            <div class="ml-5">富士物流（株）　松本支社３４５６７８９０１２３４５６７８９０１２３４５６７８９０</div>
        </div>
        @* ラベル用発送日 *@
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="Condition1">ラベル用発送日</span>
                </div>

                <!--@DateTime.Now.ToString(@"yyyy/MM/dd")-->

                <input type="text" id="SampleDTPicker1" class="form-control" value="@DateTime.Now.ToString(@"yyyy/MM/dd")" />
            </div>
        </div>
    </div>
</div>

