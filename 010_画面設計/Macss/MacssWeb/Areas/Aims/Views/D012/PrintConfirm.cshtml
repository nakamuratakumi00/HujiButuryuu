@* 請求関連書類印刷確認 *@

@{
    ViewBag.ResultMessage = "印刷します。よろしいですか？";
}

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover();

            var dt = new Macss.DataTables.MacssSimpleTable("#PrintConfirmList");
            dt.configure();

        });
    </script>
}

@* メッセージ *@
<div class="alert @ViewBag.AlertType">
    <span>@ViewBag.ResultMessage</span>
</div>

@* 戻る／実行 *@
<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
        <a role="button" class="btn btn-secondary" href="@Url.Action("Print")">@MacssWeb.Resources.ControlText.Back</a>
    </div>
    <div class="col-4 text-right">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ConfirmDialog">@MacssWeb.Resources.ControlText.Execute</button>
    </div>
</div>

@* 印刷共通部分 *@
@using (Html.BeginForm("Print", "Aims", FormMethod.Post, new { enctype = "multipart/form-data" }))
