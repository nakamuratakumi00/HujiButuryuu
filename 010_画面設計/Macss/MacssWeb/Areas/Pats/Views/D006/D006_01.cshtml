@* 月次集計データ作成 *@

<div class="alert @ViewBag.AlertType">
    <span>@ViewBag.ResultMessage</span>
</div>

@* ボタン *@
<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
    </div>
    <div class="col-4 text-right">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ConfirmDialog">実行</button>
    </div>
</div>

@* 設定項目 *@
<div id="ConditionMain" class="container-fluid mt-3 mb-3 pr-1 collapse show" aria-labelledby="headingOne" data-parent="#ConditionAccordion">
    <div class="row mr-0 mb-1">
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">年月</span>
                </div>
                <span class="form-control">YYYY年 MM月</span>
            </div>
        </div>
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="Condition1">作成対象</span>
                </div>
                <div class="macss-input-group-input form-control-plaintext">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="" id="" value="" checked>
                        <label class="form-check-label" for="">
                            当月仕入明細データ
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="" id="" value="" checked>
                        <label class="form-check-label" for="">
                            当月売上明細データ
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="" id="" value="" checked>
                        <label class="form-check-label" for="">
                            仕入CUCDデータ
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="" id="" value="" checked>
                        <label class="form-check-label" for="">
                            売上CUCDデータ
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="" id="" value="" checked>
                        <label class="form-check-label" for="">
                            包装商品検収明細書
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* 確認ダイアログ *@
<div class="modal" id="ConfirmDialog" tabindex="-1" role="dialog" aria-labelledby="ConfirmDialogTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ConfirmDialogTitle">@MacssWeb.Resources.Title.ExecConfirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ViewBag.ResultMessage
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("D006_02", "D006", null, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="UploadFileName" name="syubetsu" value="@ViewBag.Syubetsu" />
                    <button type="submit" class="btn btn-primary">はい</button>
                }
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@MacssWeb.Resources.ControlText.No</button>
            </div>
        </div>
    </div>
</div>
