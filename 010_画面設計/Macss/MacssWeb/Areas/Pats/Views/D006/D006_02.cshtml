@section Scripts {
    <script>
        $(function () {
            new Macss.DataTables.MacssSimpleTable("#D006_02List").configure();
        });
    </script>
}

<div class="alert @ViewBag.AlertType">
    <span>@ViewBag.ResultMessage</span>
</div>
<div class="alert @ViewBag.AlertType2">
    <span>@ViewBag.ResultMessage2</span>
</div>

<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
    </div>
    <div class="col-4 text-right">
        <a role="button" class="btn btn-secondary" href="@Url.Action("Index", "Home")">@MacssWeb.Resources.ControlText.BackToSubMenu</a>
    </div>
</div>

@* 設定項目 *@
<div id="ConditionMain" class="container-fluid mt-3 mb-3 pr-1 collapse show" aria-labelledby="headingOne" data-parent="#ConditionAccordion">
    <div class="row mr-0 mb-1">
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">年月</span>
                </div>
                <span class="form-control">YYYY年 MM月</span>
            </div>
        </div>
    </div>
</div>

@* リスト *@
<div class="mx-lg-0 mt-4">
    <table id="D006_02List" class="table table-striped table-hover macss-data-table" style="width:50%">
        <thead class="macss-data-table-header">
            <tr>
                <th>
                    作成対象
                </th>
                <th>
                    出力明細件数
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>当月仕入明細データ</td>
                <td>@ViewBag.TargetCount</td>
            </tr>
            <tr>
                <td>当月売上明細データ</td>
                <td>@ViewBag.TargetCount</td>
            </tr>
            <tr>
                <td>仕入CUCDデータ</td>
                <td>@ViewBag.TargetCount</td>
            </tr>
            <tr>
                <td>売上CUCDデータ</td>
                <td>@ViewBag.TargetCount</td>
            </tr>
            <tr>
                <td>包装商品検収明細書</td>
                <td>@ViewBag.TargetCount</td>
            </tr>
        </tbody>
    </table>
</div>