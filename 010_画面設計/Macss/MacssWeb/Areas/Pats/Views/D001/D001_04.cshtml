@* 共通入力項目 *@
<div class="accordion" id="ConditionAccordion">
    <div class="card">
        <div class="card-header macss-search-config-collapse-header" id="headingOne">
            <div class="mb-0">
                <button class="btn macss-btn-condition-collapse" type="button" data-toggle="collapse" data-target="#ConditionMain" aria-expanded="true" aria-controls="ConditionMain">
                    <div class="d-inline-block" style="color:#333"></div>
                    <i id="CollapseHidden" class="fas fa-chevron-circle-up" aria-hidden="true" style="color: rgb(120, 188, 255);"></i>
                    <i id="CollapseShow" class="fas fa-chevron-circle-down" aria-hidden="true" style="color: rgb(120, 188, 255); display: none;"></i>
                </button>
            </div>
        </div>

        <div id="ConditionMain" class="container-fluid mt-3 mb-3 pr-1 collapse show" aria-labelledby="headingOne" data-parent="#ConditionAccordion">
            <table class="table macss-form-table2">
                <colgroup>
                    <col class="macss-form-table-title2">
                    <col class="macss-form-table-contents2">
                </colgroup>

                @* 内示・発注 *@
                <tr style="border-bottom:ridge">
                    <th scope="row">
                        <label class="control-label">内示・発注</label>
                    </th>
                    <td>
                        @if (ViewBag.NaiHatsu == "naiji")
                        {
                            <label>内示</label>
                        }
                        else
                        {
                            <label>発注</label>
                        }
                    </td>
                </tr>

                @* 得意先注文番号入力有無 *@
                <tr>
                    <th scope="row">
                        <label class="control-label">得意先注文番号入力有無</label>
                    </th>
                    <td>
                        @if (ViewBag.Syu == "syubetsu1")
                        {
                            <label>入力無し</label>
                        }
                        else
                        {
                            <label>入力有り</label>
                        }
                    </td>
                </tr>

                @* 品名コード *@
                <tr>
                    <th scope="row">
                        <label class="control-label">品名</label>
                    </th>
                    <td>
                        123456789012345 １２３４５６７８９０１２３４５６７８９０
                    </td>
                </tr>
                @* 規格・寸法 *@
                <tr>
                    <th scope="row">
                        規格・寸法
                    </th>
                    <td>
                        １２３４５６７８９０１２３４５６７８９０
                    </td>
                </tr>
                @* 得意先注文番号（得意先注文番号） *@
                <tr>
                    <th scope="row">
                        <label class="control-label">得意先注文番号</label>
                    </th>
                    <td>
                        12345678901234567890
                    </td>
                </tr>
                @* 得意先 *@
                <tr>
                    <th scope="row">
                        <label class="control-label" for="">得意先</label>
                    </th>
                    <td>
                        1234567 １２３４５６７８９０１２３４５６７８９０１２３４５６７８９０１２３４５６７８９０
                    </td>
                </tr>
                @* 在庫区分 *@
                <tr>
                    <th scope="row">
                        在庫区分
                    </th>
                    <td>
                        12
                    </td>
                </tr>
                @* 納入先コード *@
                <tr>
                    <th scope="row">
                        <label class="">納入先</label>
                    </th>
                    <td>
                        12345 １２３４５６７８９０１２３４５６７８９０１２３４５６７８９０
                    </td>
                </tr>
                @* 管理倉庫 *@
                <tr>
                    <th scope="row">
                        管理倉庫
                    </th>
                    <td>
                        12 １２３４５６７８９０１２３４５
                    </td>
                </tr>
                @* 売上PC コード：必須 内容：表示 *@
                <tr>
                    <th scope="row">
                        <label class="">売上PC</label>
                    </th>
                    <td>
                        123456789012 １２３４５６７８９０１２３４５６７８９０１２３４５６７８９０
                    </td>
                </tr>
                @* 得意先担当者名：必須 *@
                <tr>
                    <th scope="row">
                        <label class="">得意先担当者名</label>
                    </th>
                    <td>
                        １２３４５６７８９０
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

