@* 内示・発注個別登録確認 *@

@Html.AntiForgeryToken()

@if (ViewBag.OnlyShow == null || ViewBag.OnlyShow == false)
{
    <div class="alert alert-info">
        <span>@ViewBag.ConfirmMessage</span>
    </div>
}

<div class="row justify-content-between macss-form-button-group-row">
    <div class="row justify-content-between macss-form-button-group-row">
        <div class="col-4">
            <a role="button" class="btn btn-secondary" href="@Url.Action("D001_05")">@MacssWeb.Resources.ControlText.Back</a>
        </div>
    </div>
</div>

@* 確認項目 *@
<table class="table macss-form-table">
    <colgroup>
        <col class="macss-form-table-title" />
        <col class="macss-form-table-contents" />
    </colgroup>

    @* 内示・発注 *@
    <tr style="border-bottom:ridge">
        <th scope="row">
            <label class="control-label">内示・発注</label>
        </th>
        <td>
            @if (ViewBag.NaiHatsu == "naiji")
            {
                <label>内示</label>
            }
            else
            {
                <label>発注</label>
            }
        </td>
    </tr>

    @* 品名登録有無 *@
    <tr>
        <th scope="row">
            <label class="control-label">品名登録有無</label>
        </th>
        <td>
            @if (ViewBag.Syu == 1)
            {
                <label>登録済</label>
            }
            else
            {
                <label>未登録</label>
            }
        </td>
    </tr>

    @* 注文日 *@
    <tr>
        <th scope="row">
            注文日
        </th>
        <td>
            YYYY/MM/DD
        </td>
    </tr>
    @* 品名コード *@
    <tr>
        <th scope="row">
            品名コード
        </th>
        <td>
            123456789012
        </td>
    </tr>
    @* 品名 *@
    <tr>
        <th scope="row">
            品名
        </th>
        <td>
            １２３４５６７８９０１２３４５６７８９０
        </td>
    </tr>
    @* 規格・寸法 *@
    <tr>
        <th scope="row">
            規格・寸法
        </th>
        <td>
            １２３４５６７８９０１２３４５６７８９０
        </td>
    </tr>
    @* 納期 *@
    <tr>
        <th scope="row">
            納期
        </th>
        <td>
            YYYY/MM/DD
        </td>
    </tr>
    @* 注文数 *@
    <tr>
        <th scope="row">
            注文数
        </th>
        <td>
            123,456,789
        </td>
    </tr>
    @* 元注文数 *@
    <tr>
        <th scope="row">
            元注文数
        </th>
        <td>
            123,456,789
        </td>
    </tr>
    @* 単位 *@
    <tr>
        <th scope="row">
            単位
        </th>
        <td>
            12 １２３４５６７８９０
        </td>
    </tr>
    @* 注文単価 *@
    <tr>
        <th scope="row">
            注文単価
        </th>
        <td>
            12,345,678,901.12
        </td>
    </tr>
    @* 注文金額 *@
    <tr>
        <th scope="row">
            注文金額
        </th>
        <td>
            12,345,678,901
        </td>
    </tr>
    @* 粗利益額 *@
    <tr>
        <th scope="row">
            粗利益額
        </th>
        <td>
            123,456,789
        </td>
    </tr>
    @if (@ViewBag.Syu == 1)
    {
        @* 売上予定単価 *@
        @* 品名登録済 *@
        <tr>
            <th scope="row">
                売上予定単価
            </th>
            <td>
                12,345,678,901.12
            </td>
        </tr>
        @* 売上予定金額 *@
        @* 品名登録済 *@
        <tr>
            <th scope="row">
                売上予定金額
            </th>
            <td>
                12,345,678,901
            </td>
        </tr>
    }
    else
    {
        @* 売上単価 *@
        @* 品名未登録 *@
        <tr>
            <th scope="row">
                売上単価
            </th>
            <td>
                12,345,678,901.12
            </td>
        </tr>
        @* 売上金額 *@
        @* 品名未登録 *@
        <tr>
            <th scope="row">
                売上金額
            </th>
            <td>
                12,345,678,901
            </td>
        </tr>
    }
    @* 在庫区分 *@
    <tr>
        <th scope="row">
            在庫区分
        </th>
        <td>
            12
        </td>
    </tr>
    @* 倉庫 *@
    <tr>
        <th scope="row">
            倉庫
        </th>
        <td>
            12 １２３４５６７８９０１２３４５
        </td>
    </tr>
    @* 発注先 *@
    <tr>
        <th scope="row">
            発注先
        </th>
        <td>
            1234567 １２３４５６７８９０１２３４５６７８９０１２３４５６７８９０１２３４５６７８９０
        </td>
    </tr>
    @* 得意先 *@
    <tr>
        <th scope="row">
            得意先
        </th>
        <td>
            1234567 １２３４５６７８９０１２３４５６７８９０１２３４５６７８９０１２３４５６７８９０
        </td>
    </tr>
    @* 原価区分 *@
    <tr>
        <th scope="row">
            原価区分
        </th>
        <td>
            1:原価
        </td>
    </tr>
    @* 得意先製造番号 *@
    <tr>
        <th scope="row">
            得意先製造番号
        </th>
        <td>
            123456789012345678901234567890
        </td>
    </tr>
    @* 得意先注文番号 *@
    <tr>
        <th scope="row">
            得意先注文番号
        </th>
        <td>
            12345678901234567890
        </td>
    </tr>
    @* 納入先コード *@
    <tr>
        <th scope="row">
            納入先コード
        </th>
        <td>
            12345
        </td>
    </tr>
    @* 納入先名 *@
    <tr>
        <th scope="row">
            納入先名
        </th>
        <td>
            １２３４５６７８９０１２３４５６７８９０１２３４５６７８９０
        </td>
    </tr>
    @* 売上PC *@
    <tr>
        <th scope="row">
            売上PC
        </th>
        <td>
            123456789012
        </td>
    </tr>
    @* 得意先担当者名 *@
    <tr>
        <th scope="row">
            得意先担当者名
        </th>
        <td>
            １２３４５６７８９０
        </td>
    </tr>
    @* 特記事項 *@
    <tr>
        <th scope="row">
            特記事項
        </th>
        <td>
            １２３４５６７８９０１２３４５６７８９０１２３４５６７８９０１２３４５６７８９０
        </td>
    </tr>
</table>

<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
        <a role="button" class="btn btn-secondary" href="@Url.Action("D001_05")">@MacssWeb.Resources.ControlText.Back</a>
    </div>
    <div class="col-4 text-right">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ConfirmDialog">@ViewBag.ButtonText</button>
    </div>
</div>

<div class="modal" id="ConfirmDialog" tabindex="-1" role="dialog" aria-labelledby="ConfirmDialogTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ConfirmDialogTitle">@MacssWeb.Resources.Title.ExecConfirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ViewBag.ConfirmDialogText
                @*＊＊＊＊を実行します。よろしいですか？*@
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" name="cmdBtmExec" value="@((int)MacssWeb.Common.ButtonValues.Exec)">@MacssWeb.Resources.ControlText.Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@MacssWeb.Resources.ControlText.No</button>
                @*<button type="button" class="btn btn-secondary" data-dismiss="modal">@MacssWeb.Resources.ControlText.Cancel</button>
                    <button type="submit" class="btn btn-primary" name="cmdBtmExec" value="@((int)MacssWeb.Common.ButtonValues.Exec)">@ViewBag.ButtonText</button>*@
                @*<button type="submit" class="btn btn-primary" name="cmdBtmExec" value="@((int)MacssWeb.Common.ButtonValues.Exec)">はい</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">いいえ</button>*@
            </div>
        </div>
    </div>
</div>