<div class="alert @ViewBag.AlertType">
    <span>@ViewBag.ResultMessage</span>
</div>

<div class="row justify-content-between macss-form-button-group-row">
    <div class="col-4">
    </div>
    <div class="col-4 text-right">
        <a role="button" class="btn btn-secondary" href="@Url.Action("Index", "Home")">@MacssWeb.Resources.ControlText.BackToSubMenu</a>
    </div>
</div>

@* 設定項目 *@
<div id="ConditionMain" class="container-fluid mt-3 mb-3 pr-1 collapse show" aria-labelledby="headingOne" data-parent="#ConditionAccordion">
    <div class="row mr-0 mb-1">
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">年月</span>
                </div>
                <span class="form-control">YYYY年 MM月</span>
            </div>
        </div>
        <div class="col-4">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">締日</span>
                </div>
                <div class="macss-input-group-input form-control">
                    <label class="form-check-label" for="inlineRadio1">20日</label>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row mr-0 mb-1">
        <div class="col-4">
            <div class="input-group mt-3 mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">請求データ件数</span>
                </div>
                <span class="form-control">100件</span>
            </div>
        </div>
        <div class="col-4">
            <div class="input-group mt-3 mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">仕入データ件数</span>
                </div>
                <span class="form-control">100件</span>
            </div>
        </div>
    </div>
</div>
