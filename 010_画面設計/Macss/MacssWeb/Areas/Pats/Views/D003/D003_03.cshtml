@section Scripts {
    <script>
        $(function () {

            var dt = new Macss.DataTables.MacssDataTable("#D003_03List");
            dt.configure();

            //MacssDataTable（dataTables.fixedColumns.js）に表示する列が15件以上あると計算間違いで最左端列にスクロールバーが表示されるため、非表示にする
            $('.DTFC_LeftBodyLiner').css('overflow-y', 'hidden');

            $("#hinmeiCd1").show();
            $("#hinmei1").show();
            $("#hinmeiCd2").hide();
            $("#hinmei2").hide();
            $("#tani1").show();
            $("#tani2").hide();

            $("#addDetail").show();
            $("#editDetail").hide();
        });

        // 品名登録有無ラジオボタン変更
        $('[name="syubetsu"]:radio').change(function () {
            if ($('[id=1]').prop('checked')) {
                // 登録済み
                console.log("1");
                syu = 1;
                $("#hinmeiCd1").show();
                $("#hinmei1").show();
                $("#hinmeiCd2").hide();
                $("#hinmei2").hide();
                $("#tani1").show();
                $("#tani2").hide();
                $("#tanka1").show();
                $("#tanka2").hide();
                $("#kingaku1").show();
                $("#kingaku2").hide();

            } else if ($('[id=2]').prop('checked')) {
                // 未登録
                console.log("2");
                syu = 2;
                $("#hinmeiCd1").hide();
                $("#hinmei1").hide();
                $("#hinmeiCd2").show();
                $("#hinmei2").show();
                $("#tani1").hide();
                $("#tani2").show();
                $("#tanka1").hide();
                $("#tanka2").show();
                $("#kingaku1").hide();
                $("#kingaku2").show();
            }
        });

        // データ区分変更
        $("#dataKbn").change(function () {
            var val = $("#dataKbn").val();
            console.log(val);
            if (val == "111 売上") {
                console.log("111");
                $("#soko").addClass("required");
            } else {
                console.log("except 111");
                $("#soko").removeClass("required");
            }
        });

        // 明細編集ボタンクリック
        $("#detailEdit").click(function () {
            console.log("click");
            $("#addDetail").hide();
            $("#editDetail").show();
        });
        // 明細更新ボタンクリック
        $("#editDetail").click(function () {
            console.log("click");
            $("#addDetail").show();
            $("#editDetail").hide();
        });

    </script>
}

