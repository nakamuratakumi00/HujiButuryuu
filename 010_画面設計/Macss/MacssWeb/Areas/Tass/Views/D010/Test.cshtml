                //$('#TestNo').trigger(evt);
              
             
                $('#TestNo').val('');
            }
            else
            {
                //ビープ音
            }
        })

        $('input:radio[name="BarcodeKeyKbn"]').change(function (e) {

            CheckBarcodeKeyKbn();
        })

