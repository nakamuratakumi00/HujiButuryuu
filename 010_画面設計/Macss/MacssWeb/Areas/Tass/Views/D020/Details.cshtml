}
@section Scripts {
    <script>
        $(function () {

            var dtShiire = new Macss.DataTables.MacssSimpleTable("#ShiireList");
            dtShiire.configure();
            var dtUriage = new Macss.DataTables.MacssSimpleTable("#UriageList");
            dtUriage.configure();

            //MacssDataTable（dataTables.fixedColumns.js）に表示する列が15件以上あると計算間違いで最左端列にスクロールバーが表示されるため、非表示にする
            $('.DTFC_LeftBodyLiner').css('overflow-y', 'hidden');

        });
    </script>
}
