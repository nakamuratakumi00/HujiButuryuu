@model MacssWeb.ViewModels.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "パスワード変更";
    ViewBag.PageMainTitle = "業務統合システム";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-6">

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>パスワード変更</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                    <div>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                    <div>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        <small class="form-text text-muted">
                            8文字以上12文字以下の半角英小文字・数字で入力してください。
                        </small>
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group pb-3">
                    <div class="text-right">
                        <input type="submit" class="btn btn-primary" value="パスワードの変更" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
